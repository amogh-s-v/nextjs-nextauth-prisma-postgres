generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  username  String      @unique
  password  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  journals  Journal[]
  sentiment Sentiment[]
  problems  Problem[]
}

model Journal {
  journal_id   String      @id @default(uuid())
  journal_text String
  user         User        @relation(fields: [user_id], references: [id])
  user_id      String
  date         DateTime    @default(now())
  sentiment    Sentiment[]
}

model Sentiment {
  sentiment_id String  @id @default(uuid())
  sentiment    String
  user_id      String
  journal_id   String
  user         User    @relation(fields: [user_id], references: [id])
  journal      Journal @relation(fields: [journal_id], references: [journal_id])
}

model Problem {
  problem_history_id String @id @default(uuid())
  problem            String
  user_id            String
  user               User   @relation(fields: [user_id], references: [id])
}

model UniqueProblem {
  problem_id String     @id @default(uuid())
  problem    String     @unique
  soltuion   Solution[]
}

model Solution {
  solution_id          String        @id @default(uuid())
  solution_name        String
  solution_description String
  problem_id           String
  problem              UniqueProblem @relation(fields: [problem_id], references: [problem_id])
}
